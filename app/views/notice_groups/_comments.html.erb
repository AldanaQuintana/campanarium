<% hide_comments_link||=false %>
<div class="comments-statistics-panel">
  <h2>Lo que piensa la gente</h2>
  <%= pie_chart_with_labels(group.comments.where("positivity is not null").all.group(:positivity).count, {"positive" => "Positivo", "negative" => "Negativo", "neutral" => "Neutral" }, {"positive" => "#109618", "negative" => "#DC3912", "neutral" => "#3366CC"}, "pie-chart-#{group.id}")
 %>
  <%= link_to 'Ver comentarios', notice_group_path(group), class: 'btn btn-primary' unless hide_comments_link%>
</div>