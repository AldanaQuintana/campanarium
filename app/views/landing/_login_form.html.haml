.row
  = link_to t(".login_twitter"), signin_path(:twitter), class: "btn btn-info col-xs-12"
%br
.row
  = link_to  t(".login_facebook"), signin_path(:facebook), class: "btn btn-primary col-xs-12"
%hr
.row
  = form_for :user, url: session_path(:user), method: :post do |f|
    .form-group
      = f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control"
    .form-group
      = f.password_field :password, placeholder: "Password", class: "form-control"
    %br
    .pull-left
      = link_to  t(".register"), new_user_registration_path, class: "btn btn-default"
    .pull-right
      = f.submit  t(".login"), class: "btn btn-warning"
    .clearfix
    %br
