.row
  = form_for(:user, url: registration_path(:user)) do |f|
    .form-group
      = f.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control"
    .form-group
      = f.email_field :email, placeholder: "Email", class: "form-control :email)}"
    .form-group
      = f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control"
    .form-group
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme la contraseña", class: "form-control"
    .button-block
      = f.submit "Registrarse", class: "btn btn-primary"