<div class="landing-background">
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>Cambiá tu contraseña</h2>
      <div class="spacer-top"></div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <%= f.password_field :password, autofocus: true, autocomplete: "off",placeholder: "Nueva contraseña", class: "form-control"%>

        <div class="spacer-top"></div>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirma la nueva contraseña", class: "form-control" %>

        <div class="spacer-top"></div>
        <div class="actions">
          <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary button-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
